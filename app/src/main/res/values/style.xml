<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/digikala_font</item>
        <item name="android:textSize">@dimen/standard_font_size</item>
    </style>

    <style name="widgetListViewsItems" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/digikala_font_light</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <!-- Details Activity table tv -->
    <style name="table_details_textViews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/digikala_font_light</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <!-- bottom sheet -->
    <style name="bottom_sheet">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- navigation drawer TextView -->
    <style name="navigation_drawer_TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/digikala_font</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">#ffff</item>
    </style>


    <!-- about us edit textViews : -->
    <style name="about_us_textView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="fontFamily">@font/digikala_font_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/standard_font_size</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <!-- toolbar textViews : -->
    <style name="toolbar_textView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fontFamily">@font/digikala_font</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <!-- material button : -->
    <style name="btn_material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="fontFamily">@font/digikala_font_bold</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginEnd">@dimen/large_margin</item>
    </style>

    <!-- compat button : -->
    <style name="btn_compat" parent="btn_material">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- GPS layout button : -->
    <style name="btn_gps_layout" parent="btn_compat">
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
    </style>

    <!-- Details layout button : -->
    <style name="btn_details" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:padding">4dp</item>
        <item name="fontFamily">@font/digikala_font_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <!-- view line separator : -->
    <style name="view_separator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
    </style>

    <!-- card view : -->
    <style name="card_view" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardCornerRadius">@dimen/standard_card_radius</item>

    </style>

    <!-- textInput EditText material : -->
    <style name="material_editText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/standard_padding</item>
        <item name="fontFamily">@font/digikala_font</item>
        <item name="android:gravity">center_vertical</item>
        <item name="maxLines">1</item>
    </style>



</resources>